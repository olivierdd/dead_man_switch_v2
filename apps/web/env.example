# Next.js Frontend Environment Variables
# Copy this file to .env.local and fill in your values

# Application
NEXT_PUBLIC_APP_NAME="Secret Safe"
NEXT_PUBLIC_APP_VERSION="0.1.0"
NODE_ENV=development

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_API_VERSION=v1

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_key_here

# External Services
NEXT_PUBLIC_SENDGRID_API_KEY=your_sendgrid_api_key
NEXT_PUBLIC_IPFS_GATEWAY_URL=https://gateway.pinata.cloud

# Blockchain (for Ultimate tier)
NEXT_PUBLIC_WEB3_PROVIDER_URI=your_ethereum_provider_url
NEXT_PUBLIC_CONTRACT_ADDRESS=your_smart_contract_address

# Monitoring
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn

# Development
VERCEL_ENV=development

